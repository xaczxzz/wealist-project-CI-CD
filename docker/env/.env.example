# =============================================================================
# weAlist Project - Environment Variables Template
# =============================================================================
# 이 파일을 복사하여 .env.dev 또는 .env.prod 파일을 생성하세요.
#
# 개발 환경:
#   cp docker/env/.env.example docker/env/.env.dev
#   # 그리고 .env.dev.example 내용 참고하여 수정
#
# 프로덕션 환경:
#   cp docker/env/.env.example docker/env/.env.prod
#   # 그리고 .env.prod.example 내용 참고하여 수정
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=wealist-api
VERSION=latest
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# Database Configuration - PostgreSQL
# =============================================================================
# Superuser (관리자 계정)
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERUSER_PASSWORD=CHANGE_THIS_POSTGRES_ADMIN_PASSWORD

# User Service Database
USER_DB_NAME=wealist_user_db
USER_DB_USER=wealist_user
USER_DB_PASSWORD=CHANGE_THIS_USER_DB_PASSWORD

# Board Service Database
BOARD_DB_NAME=wealist_board_db
BOARD_DB_USER=board_service
BOARD_DB_PASSWORD=CHANGE_THIS_BOARD_DB_PASSWORD

# PostgreSQL Port (호스트 노출용, 개발 환경에서만 사용)
POSTGRES_HOST_PORT=5432

# =============================================================================
# Cache Configuration - Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_HOST_PORT=6379

# =============================================================================
# JWT Configuration
# =============================================================================
# ⚠️ 프로덕션에서는 반드시 64자 이상의 강력한 시크릿 사용!
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_AT_LEAST_64_BYTES_FOR_HS512_ALGORITHM_SECURITY
JWT_ACCESS_TOKEN_EXPIRATION_MS=1800000     # Access Token: 30분 (밀리초)
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000  # Refresh Token: 7일 (밀리초)

# Board Service에서도 JWT_SECRET을 SECRET_KEY로 참조
# (docker-compose.yml에서 SECRET_KEY=${JWT_SECRET}로 매핑됨)

# =============================================================================
# JPA/Hibernate Configuration
# =============================================================================
JPA_DDL_AUTO=update            # create, create-drop, update, validate, none
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# =============================================================================
# Service Ports
# =============================================================================
# User Service (Spring Boot)
USER_HOST_PORT=8080

# Board Service (Go)
BOARD_HOST_PORT=8000
BOARD_SERVER_PORT=8000

# Board Service - User Service 연동 URL
USER_SERVICE_URL=http://user-service:8080

# Frontend
FRONTEND_HOST_PORT=3000

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug                # debug, info, warn, error

# =============================================================================
# OAuth2 Configuration - Google
# =============================================================================
# Google Cloud Console에서 발급: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 리다이렉트 URL
OAUTH2_REDIRECT_URL=http://localhost:3000/oauth/callback

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# =============================================================================
# Frontend Environment Variables
# =============================================================================
VITE_REACT_APP_JAVA_API_URL=http://localhost:8080
VITE_REACT_APP_GO_API_URL=http://localhost:8000
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# =============================================================================
# Monitoring Configuration (선택사항)
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Exporters
REDIS_EXPORTER_PORT=9121
POSTGRES_EXPORTER_PORT=9187
NODE_EXPORTER_PORT=9100

# =============================================================================
# Build Configuration
# =============================================================================
CACHEBUST=1
