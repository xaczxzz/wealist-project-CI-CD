# Server Configuration
ENV=dev
USE_AUTO_MIGRATE=true
SERVER_PORT=8000

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://kanban_service:kanban_pass12345@localhost:5432/wealist_kanban_db?sslmode=disable

# Redis Cache
# Format: redis://:password@host:port/db
REDIS_URL=redis://:pass12345@localhost:6379/1

# JWT Configuration (Must match User Service secret)
SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_AT_LEAST_64_BYTES_FOR_HS512_ALGORITHM

# User Service URL
USER_SERVICE_URL=http://localhost:8080

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Logging
LOG_LEVEL=debug
